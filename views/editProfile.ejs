<body class="editHero">
<div class="container">
<div class="col-sm-6 offset-md-3 title">
        <h1 class="title mt-4">Edit Profile</h1>
        <form method="post" action="/users/profile?_method=PATCH" class="title">
            <div class="form-group">
                <label for="name">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= currentUser.firstName %>">
            </div>
            <div class="form-group">
                <label for="name">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= currentUser.lastName %>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= currentUser.email %>">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" value="*************">
            </div>
            <div class="form-group">
                <label for="name">Location (City/State)</label>
                <input type="text" class="form-control" id="location" name="location" value="<%= currentUser.location %>">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Skill Level</label>
                </div>
                <select class="custom-select" value="skillLevel">
                    <option selected>Choose...</option>
                    <option value="Beginner">Beginner</option>
                    <option value="Moderate">Moderate</option>
                    <option value="Expert">Expert</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary editBtn">Submit Changes</button>
        </form>
            <form method="post" action="/users/profile?_method=DELETE">
                <button type="delete" class="btn btn-danger deleteUser col-3 editBtn">Delete Profile</button>
            </form>
            
        <hr>
        <p class="subtitle">Go back to your <a href="/users/profile">profile</a>.</p>
    </div>
</div>
</body>